10 REM MSX-BASIC GAME EXTENSION LOADER
20 BLOAD "ARTISAN.bin",R
30 REM GET FREE MEMORY IN PAGE 1 START ADDRESS
40 A%=0:_MEMCPY(&H4010,VARPTR(A%),2)
50 REM GET ARTISAN BASIC VERSION
60 V%=0:_MEMCPY(&H4012,VARPTR(V%),2)
70 PRINT "ARTISAN BASIC v";
80 C%=(V% AND &HF0)/16:IF C%>0 THEN PRINT CHR$(C%+48);
90 C%=(V% AND &HF):PRINT CHR$(C%+48);".";
100 C%=ABS((V% AND &HF000)/4096):PRINT CHR$(C%+48);
110 C%=ABS((V% AND &H0F00)/256):IF C%>0 THEN PRINT CHR$(C%+48) ELSE PRINT
120 PRINT "Page 0 free bytes = 16128"
130 PRINT "Page 1 free bytes =";32768-A%
140 RUN"GAMEUSR.ASC"
